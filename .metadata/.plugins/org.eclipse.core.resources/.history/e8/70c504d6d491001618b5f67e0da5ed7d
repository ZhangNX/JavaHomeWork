package cn.edu.bjfu.en.im;

public class Calculate {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Caclulator c = new Caclulator();
		int res = c.add(5);//º”5
		res = c.sub(3);//ºı3
		res = c.clear();//«Â¡„

	}

	public class Caclulator {
		int temp;
		Caclulator(){
			temp=0;
		}
		public  int add(int addNum){
			return temp+=addNum;
		}
		public  int sub(int subNum){
			return temp-=subNum;
		}
		public  int clear(){
			return temp=0;
		}
	}
}
